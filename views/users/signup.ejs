<% layout("/layouts/boilerplate.ejs") %>
<style>
    @media screen and (max-width: 768px){
        .sign-container .sign-box{
            width: 100%;
            /*background-color: yellow;*/
            margin: 0 auto !important;
        }
        .sign-container h1{
            text-align: center;
        }
    }
   </style>
<div class="row mt-3 sign-container">
    <div class="col-6 offset-3 sign-box">
         <h1 class="mb-5 text-warning">SignUp on <span class=" fw-bold"><a href="/listings" class="text-decoration-none text-danger">Wonderlust</a></span></h1>
         <form action="/signup" method="POST" novalidate class="needs-validation">
             <div class="mb-3">
                 <label class="form-label" for="username"><i class="fa-solid fa-user mx-2 "></i>Username</label>
                 <input name="username"  id="username" type="text" placeholder="Type Username here.." class="form-control"
                        style="font-size: 14px"  required/>
                 <div class="valid-feedback">Looks Good!</div>
                 <div class="invalid-feedback">Please enter the Username</div>
             </div>
             <div class="mb-3">
                 <label class="form-label" for="email"><i class="fa-solid fa-envelope mx-2"></i>Email</label>
                 <input name="email"  id="email" type="email" placeholder="example@gmail.com" class="form-control"
                        style="font-size: 14px"  required/>
                 <div class="valid-feedback">Looks Good!</div>
                 <div class="invalid-feedback">Please enter the Email address</div>
             </div>
             <div class="mb-3">
                 <label class="form-label" for="password"><i class="fa-solid fa-key mx-2"></i>Password</label>
                 <input name="password"  id="password" type="password"  class="form-control"
                        style="font-size: 14px"  required/>
                 <div class="valid-feedback">Looks Good!</div>
                 <div class="invalid-feedback">Please fill required! </div>
             </div>
             <button class="btn btn-success">SignUp</button>
         </form>
    </div>
</div>